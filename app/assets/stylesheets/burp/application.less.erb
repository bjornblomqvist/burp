.nav-collapse.collapse {
  height: auto !important;
  overflow: visible !important;
}

body .navbar .nav {
  margin: 0px;
  > li.help-link {
    float: right;
  }
}

body > .container {
  padding: 60px 0px 100px;
}

.container > .row {
  margin: 0px;
}

.controls > .input > textarea {
  width: 500px;
}

body .navbar .brand {
  color: #fff; 
}

form.button_to {
  display: inline;
  margin: 0px;
  
  > div {
    display: inline;
  }
}

span.buttons {
  margin: 20px 0px;
  display: block;
}

.span3.docs-sidebar {
    margin-left: 0;
}



td {
  padding: 1px 50px 1px 0px; 
}

.on-page-documentation {
  width: 250px;
  float: right;
  position: relative;
  
  /*
    Super ugly hack to fix hr problem
  */
  &:before {
    content: " ";
    height: 100%;
    width: 10px;
    background: white;
    left: -11px;
    top: 0px;
    display: block;
    position: absolute;
  }
}

.img-polaroid {
  max-width: 95%;
}







