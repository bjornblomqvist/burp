

<%= twitter_bootstrap_form_for :link, :url => "./", :method => (@link ? :put : :post),:html => {:id => "edit-link-form",:class => 'form-horizontal'} do |f| %>

  <%= f.fieldset "Link" do %>
    <%= f.text_field :name, "Name" %>
    <%= f.text_field :url, "Url" %>
  <% end %>
  
  
  <%= f.actions do %>
    <%= f.submit @link ? 'Save' : "Create" %>
    <%= button_tag  'Cancel', :onclick => "document.location = '#{edit_menu_path(@menu)}'; return false;", :class => 'btn' %>
    <% if @link %>
      <%= button_tag  'Remove', :onclick => "$('#remove-link').click(); return false;", :class => 'btn btn-warning' %>
      <%= link_to 'Destroy', menu_link_path(@menu,@link), :confirm => 'Are you sure?', :id => 'remove-link', :method => :delete, :style => "display: none;" %>
    <% end %>
  <% end %>
<% end %>
