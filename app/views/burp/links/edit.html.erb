

<%= bootstrap_form_for :link, :url => "./", :method => (@link ? :put : :post),:html => {:id => "edit-link-form",:class => 'form-horizontal'} do |f| %>
  
  <fieldset>
    <legend>Link</legend>
    <%= f.text_field :name %>
    <%= f.text_field :url, :label => "URL" %>  
  </fieldset>
  
  
  <%= f.actions do %>
    <%= f.submit(:include_cancel => false, :value => (@link ? 'Save' : "Create"), :class => "btn btn-primary") %>
    <%= button_tag  'Cancel', :onclick => "document.location = '#{edit_menu_path(@menu)}'; return false;", :class => 'btn' %>
    <% if @link %>
      <%= link_to 'Remove', menu_link_path(@menu,@link), :confirm => 'Are you sure?',:class => 'btn btn-warning', :method => :delete %>
    <% end %>
  <% end %>
<% end %>
